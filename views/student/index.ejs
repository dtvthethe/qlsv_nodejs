<h1>Danh sách sinh viên</h1>
<a href="/create" class="btn btn-info">Add</a>
<form action="/" method="GET">
  <label class="form-inline justify-content-end">Tìm kiếm: <input type="search" name="search" class="form-control"
      value="<%=search%>">
    <button class="btn btn-danger">Tìm</button>
  </label>
</form>
<table class="table table-hover">
  <thead>
    <tr>
      <th>#</th>
      <th>Mã SV</th>
      <th>Tên</th>
      <th>Ngày Sinh</th>
      <th>Giới Tính</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% let stt=0; for(const student of students) { stt++; %>
      <tr>
        <td>
          <%=stt%>
        </td>
        <td>
          <%=student.id%>
        </td>
        <td>
          <%=student.name%>
        </td>
        <td>
          <%=student.birthday%>
        </td>
        <td>
          <%=student.gender%>
        </td>
        <td><a href="/edit/<%=student.id%>" class="btn btn-warning btn-sm">Sửa</a></td>
        <td>

          <button data-href="/destroy/<%=student.id%>" type="button" class="btn btn-danger btn-sm destroy"
            data-toggle="modal" data-target="#exampleModal">
            Xóa
          </button>
        </td>
      </tr>
      <% } %>
  </tbody>
</table>

<%-include('../pagination')%>
  <div>
    <span>Số lượng: <%=stt%></span>
  </div>